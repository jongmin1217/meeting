<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/myImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/image_view_custom"
        android:adjustViewBounds="true"/>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnVideoPlay"
        app:layout_constraintTop_toTopOf="@+id/myImage"
        app:layout_constraintBottom_toBottomOf="@+id/myImage"
        app:layout_constraintStart_toStartOf="@+id/myImage"
        app:layout_constraintEnd_toEndOf="@+id/myImage"
        android:src="@drawable/play"
        android:scaleType="fitXY"
        android:background="#00ff0000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myImageTime"
        app:layout_constraintBottom_toBottomOf="@+id/myImage"
        app:layout_constraintEnd_toStartOf="@+id/myImage"
        android:textSize="10dp"
        android:layout_marginRight="3dp"/>

    <TextView
        android:id="@+id/cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/myImageTime"
        app:layout_constraintEnd_toStartOf="@+id/myImage"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:text="1"
        android:textColor="#000000"
        android:visibility="invisible"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:background="#00ff0000"
        app:layout_constraintTop_toBottomOf="@id/myImage" />
</androidx.constraintlayout.widget.ConstraintLayout>