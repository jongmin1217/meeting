<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btnCapture"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_call_switch_camera"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#00ff0000"
        android:src="@drawable/capture"
        android:scaleType="fitXY"
        />

    <ImageButton
        android:id="@+id/button_call_switch_camera"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#00ff0000"
        android:contentDescription="@string/switch_camera"
        android:scaleType="fitXY"
        android:src="@drawable/camera_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnFace"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00ff0000"
        android:src="@drawable/face"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@+id/button_call_toggle_mic"
        app:layout_constraintEnd_toStartOf="@id/button_call_toggle_mic"
        android:layout_marginEnd="10dp"
        />

    <ImageButton
        android:id="@+id/button_call_toggle_mic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="50dp"
        android:background="#00ff0000"
        android:contentDescription="@string/toggle_mic"
        android:scaleType="fitXY"
        android:src="@drawable/mic_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_camera_off" />

    <ImageButton
        android:id="@+id/button_camera_off"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="50dp"
        android:background="#00ff0000"
        android:contentDescription="@string/switch_camera"
        android:scaleType="fitXY"
        android:src="@drawable/video_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/button_call_disconnect"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:background="#00ff0000"
        android:contentDescription="@string/disconnect_call"
        android:scaleType="fitXY"
        android:src="@drawable/disconnectcall"
        app:layout_constraintBottom_toBottomOf="@id/button_camera_off"
        app:layout_constraintStart_toEndOf="@id/button_camera_off"
        app:layout_constraintTop_toTopOf="@id/button_camera_off" />


</androidx.constraintlayout.widget.ConstraintLayout>
