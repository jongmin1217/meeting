<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout">
    <ImageView
        android:id="@+id/moveImage"
        android:layout_width="99dp"
        android:layout_height="141dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/textAge"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/moveImage"
        app:layout_constraintStart_toEndOf="@id/moveImage"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textAge"
        app:layout_constraintBottom_toBottomOf="@+id/textAge"
        app:layout_constraintStart_toEndOf="@id/textAge"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:textColor="#000000"
        android:textSize="16sp"
        />
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/textAge"
        app:layout_constraintStart_toEndOf="@id/moveImage"
        android:src="@drawable/star"
        android:scaleType="fitXY"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/textStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/star"
        app:layout_constraintBottom_toBottomOf="@id/star"
        app:layout_constraintStart_toEndOf="@id/star"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예매율"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/star"
        app:layout_constraintStart_toEndOf="@id/textStar"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/textExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/exp"
        app:layout_constraintStart_toEndOf="@id/exp"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개요"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/star"
        app:layout_constraintStart_toEndOf="@id/moveImage"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/textRelease"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/star"
        app:layout_constraintStart_toEndOf="@id/release"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감독"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textRelease"
        app:layout_constraintStart_toEndOf="@id/moveImage"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/textDirector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/textRelease"
        app:layout_constraintStart_toEndOf="@id/director"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출현"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textDirector"
        app:layout_constraintStart_toEndOf="@id/moveImage"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/textActor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/textDirector"
        app:layout_constraintStart_toEndOf="@id/actor"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>