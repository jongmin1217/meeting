<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/nicknameInput"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Nickname"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            />
        <Button
            android:layout_width="145dp"
            android:layout_height="35dp"
            android:text="중복확인"
            android:id="@+id/btnNicknameCheck"
            android:background="@drawable/button_custom"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/nicknameInput"
            app:layout_constraintStart_toStartOf="@+id/nicknameInput"
            app:layout_constraintEnd_toEndOf="@+id/nicknameInput"
            android:clickable="true"
            android:onClick="btnNicknameCheck"/>
        <ImageView
            android:id="@+id/check_image"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintTop_toTopOf="@+id/btnNicknameCheck"
            app:layout_constraintBottom_toBottomOf="@+id/btnNicknameCheck"
            app:layout_constraintStart_toEndOf="@+id/btnNicknameCheck"
            android:layout_marginLeft="10dp"
            />
        <Spinner
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/btnNicknameCheck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/area_spinner"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <Spinner
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/area_spinner"
            app:layout_constraintStart_toStartOf="@id/area_spinner"
            android:id="@+id/year_spinner"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
        <Spinner
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/area_spinner"
            app:layout_constraintStart_toEndOf="@id/year_spinner"
            android:id="@+id/month_spinner"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
        <Spinner
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/area_spinner"
            app:layout_constraintStart_toEndOf="@id/month_spinner"
            android:id="@+id/day_spinner"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
        <Spinner
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/day_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/gender_spinner"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <Spinner
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/gender_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/height_spinner"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <Spinner
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/height_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/form_spinner"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <Spinner
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/form_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/smoke_spinner"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <Spinner
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/smoke_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/drink_spinner"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/drink_spinner"
            app:layout_constraintStart_toStartOf="@id/drink_spinner"
            android:id="@+id/btnPersonality"
            android:background="@drawable/button_custom"
            android:textColor="#000000"
            android:text="성격"
            android:clickable="true"
            android:onClick="btnPersonality"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnPersonality"
            app:layout_constraintStart_toStartOf="@id/btnPersonality"
            android:id="@+id/personality"
            android:textSize="14dp"
            android:textColor="#000000"
            />
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/personality"
            app:layout_constraintStart_toStartOf="@id/personality"
            android:id="@+id/btnHobby"
            android:background="@drawable/button_custom"
            android:textColor="#000000"
            android:text="취미"
            android:clickable="true"
            android:onClick="btnHobby"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnHobby"
            app:layout_constraintStart_toStartOf="@id/btnHobby"
            android:id="@+id/hobby"
            android:textSize="14dp"
            android:textColor="#000000"
            />
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/hobby"
            app:layout_constraintStart_toStartOf="@id/hobby"
            android:id="@+id/btnIdealType"
            android:background="@drawable/button_custom"
            android:textColor="#000000"
            android:text="이상형"
            android:clickable="true"
            android:onClick="btnIdealType"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnIdealType"
            app:layout_constraintStart_toStartOf="@id/btnIdealType"
            android:id="@+id/idealType"
            android:textSize="14dp"
            android:textColor="#000000"
            />
        <Button
            android:layout_marginTop="30dp"
            android:layout_width="145dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@id/idealType"
            app:layout_constraintStart_toStartOf="@id/idealType"
            android:id="@+id/btnNext"
            android:background="@drawable/button_custom"
            android:textColor="#000000"
            android:text="다음"
            android:clickable="true"
            android:onClick="btnNext"/>
        <Button
            android:layout_marginTop="30dp"
            android:layout_width="145dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@id/idealType"
            app:layout_constraintEnd_toEndOf="@id/idealType"
            android:id="@+id/btnCancel"
            android:background="@drawable/button_custom"
            android:textColor="#000000"
            android:text="취소"
            android:clickable="true"
            android:onClick="btnCancel"/>
        <View
            app:layout_constraintTop_toBottomOf="@id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:layout_centerInParent="true"
            android:background="#ffffff"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
